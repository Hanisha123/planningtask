<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">
    <FrameLayout
        android:id="@+id/activity_changetat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <!-- <androidx.cardview.widget.CardView
                    android:id="@+id/user_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/greycolor"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:outlineSpotShadowColor="@color/card_shadow"
                    app:cardCornerRadius="3dp"
                    app:cardUseCompatPadding="true"
                   >-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp"
                        android:id="@+id/user_cardview"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--1st linear layout-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:id="@+id/circular_layout">
                                        <ImageView
                                            android:id="@+id/gmailitem_letter"
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center" />
                                        <TextView
                                            android:id="@+id/emp_first_letter"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/gothambook"
                                            android:padding="5dp"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_12sdp"
                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/emp_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:fontFamily="@font/gothambook"
                                        android:padding="5dp"
                                        android:text="employeename"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp" />
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/emp_code"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="left"
                                            android:fontFamily="@font/gothambook"
                                            android:padding="5dp"
                                            android:text="employeecode"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_12sdp" />
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/emp_designation"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="left"
                                            android:fontFamily="@font/gothambook"
                                            android:padding="5dp"
                                            android:text="employeedesignation"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_12sdp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
           <!--     </androidx.cardview.widget.CardView>-->
            </LinearLayout>
    </FrameLayout>
</LinearLayout>

