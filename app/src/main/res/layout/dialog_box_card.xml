<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    android:gravity="center|top"
    android:layout_margin="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--1st linear layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task Details"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:padding="5dp"
                        android:fontFamily="@font/gothambook"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:padding="5dp"
                        android:fontFamily="@font/gothambook"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/subject_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="subject"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:padding="5dp"
                            android:fontFamily="@font/gothambook"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From Date"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:padding="5dp"
                        android:fontFamily="@font/gothambook"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fromdate_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="fromdate"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:padding="5dp"
                            android:fontFamily="@font/gothambook"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ToDate"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:padding="5dp"
                        android:fontFamily="@font/gothambook"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/todate_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="todate"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:padding="5dp"
                            android:fontFamily="@font/gothambook"
                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assigned By"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:padding="5dp"
                        android:fontFamily="@font/gothambook"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/assignedby_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="assignby"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:padding="5dp"
                            android:fontFamily="@font/gothambook"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assigned To"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:padding="5dp"
                        android:fontFamily="@font/gothambook"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/assignto_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="assignto"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:padding="5dp"
                            android:fontFamily="@font/gothambook"
                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brand"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:padding="5dp"
                        android:fontFamily="@font/gothambook"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/brand_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="brand"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:padding="5dp"
                            android:fontFamily="@font/gothambook"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task Status"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:padding="5dp"
                        android:fontFamily="@font/gothambook"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/task_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="taskstatus"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:padding="5dp"
                            android:fontFamily="@font/gothambook"
                            android:autoLink="web"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filename"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:padding="5dp"
                        android:fontFamily="@font/gothambook"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/filename_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="filename"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:padding="5dp"
                            android:fontFamily="@font/gothambook"
                            android:autoLink="web"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:padding="5dp"
                        android:fontFamily="@font/gothambook"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/description_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="description"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:padding="5dp"
                            android:fontFamily="@font/gothambook"
                            android:autoLink="web"/>
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:textColor="#fff"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_12sdp"
                    android:text="Done"
                    android:layout_gravity="center"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>