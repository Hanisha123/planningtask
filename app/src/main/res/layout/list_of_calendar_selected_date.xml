<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="cards main container"

    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_changetat">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DUE TASKS"
                    android:textStyle="bold"
                    android:textColor="@color/light_black"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:id="@+id/due_task_textview"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/greycolor"
                    android:gravity="center"
                    android:elevation="4dp"
                    app:cardCornerRadius="3dp"
                    app:cardUseCompatPadding="true"
                    android:outlineSpotShadowColor="@color/card_shadow">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"
                                android:id="@+id/task_status_color"
                                android:orientation="horizontal">
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--1st linear layout-->

                                <!--2nd linearlayout-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/subject"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Subject"
                                        android:fontFamily="@font/gothambook"
                                        android:textColor="@color/black"
                                        android:layout_gravity="center"
                                        android:textSize="15dp"
                                        android:padding="5dp"
                                        />
                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/colorPrimary"
                                    android:layout_margin="@dimen/_3sdp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/fromdate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Fromdate"
                                        android:fontFamily="@font/gothambook"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:layout_gravity="center"
                                        android:textSize="12dp"
                                        android:padding="5dp"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_gravity="end">
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/todate"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Todate"
                                            android:fontFamily="@font/gothambook"
                                            android:gravity="end"
                                            android:textStyle="bold"
                                            android:textColor="@color/black"
                                            android:layout_gravity="center"
                                            android:textSize="12dp"
                                            android:padding="5dp"
                                            />
                                    </LinearLayout>
                                </LinearLayout>



                                <!--3rd linearlayout-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/description"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Description"

                                        android:textColor="@color/black"
                                        android:layout_gravity="center"
                                        android:textSize="12dp"
                                        android:fontFamily="@font/gothambook"
                                        android:padding="5dp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/priority"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Priority"
                                        android:fontFamily="@font/gothambook"
                                        android:textColor="@color/black"
                                        android:layout_gravity="center"
                                        android:textSize="12dp"
                                        android:padding="5dp"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_gravity="end">
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Monday, Feb 20"
                                            android:gravity="end"
                                            android:textStyle="bold"
                                            android:textColor="@color/light_black"
                                            android:layout_gravity="center"
                                            android:textSize="12dp"
                                            android:padding="5dp"
                                            android:visibility="gone"
                                            />
                                    </LinearLayout>
                                </LinearLayout>


                                <!--4th linear layout-->


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:visibility="gone">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/members"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4 MEMBERS"
                                        android:textStyle="bold"
                                        android:textColor="@color/card_color_one"
                                        android:layout_gravity="center"
                                        android:textSize="12dp"
                                        android:padding="5dp"
                                        />
                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/colorPrimary"
                                    android:layout_margin="@dimen/_3sdp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/assigntocal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/gothambook"
                                        android:padding="5dp"
                                        android:textStyle="bold"
                                        android:text="Assignto"
                                        android:textColor="@color/black"
                                        android:textSize="14dp" />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="end"
                                        >
                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/details"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_margin="@dimen/_3sdp"
                                            android:background="@drawable/details_icon">
                                        </androidx.appcompat.widget.AppCompatImageView>
                                    </LinearLayout>
                                </LinearLayout>
                                <!--5th linear layout-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="end"
                                        >

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/activity"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="4dp"
                                            android:visibility="gone">
                                        </androidx.appcompat.widget.AppCompatImageView>
                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/change_tat"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/card_pencil"
                                            android:layout_marginLeft="4dp"
                                            android:visibility="gone">
                                        </androidx.appcompat.widget.AppCompatImageView>

                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>
