<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:tag="cards main container">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_changetat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DUE TASKS"
                    android:textStyle="bold"
                    android:textColor="@color/light_black"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:id="@+id/due_task_textview"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/greycolor"
                    android:gravity="center"
                    android:elevation="4dp"
                    app:cardCornerRadius="3dp"
                    app:cardUseCompatPadding="true"
                    android:outlineSpotShadowColor="@color/card_shadow"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:id="@+id/side_line_color">
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--1st linear layout-->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <androidx.appcompat.widget.AppCompatTextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Activity By"
                                        android:textColor="@color/black"
                                        android:layout_gravity="center"
                                        android:textSize="12dp"
                                        android:padding="5dp"
                                        android:fontFamily="@font/gothambook"

                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_gravity="end">
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/employee_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="employeename"
                                            android:gravity="end"
                                            android:textColor="@color/black"                                            android:layout_gravity="center"
                                            android:textSize="12dp"
                                            android:padding="5dp"
                                            android:fontFamily="@font/gothambook"

                                            />
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <androidx.appcompat.widget.AppCompatTextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Status"
                                        android:textColor="@color/black"                                        android:layout_gravity="center"
                                        android:textSize="12dp"
                                        android:padding="5dp"
                                        android:fontFamily="@font/gothambook"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_gravity="end">
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/status"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="status"
                                            android:textStyle="bold"
                                            android:gravity="end"
                                            android:textColor="@color/black"                                            android:layout_gravity="center"
                                            android:textSize="12dp"
                                            android:padding="5dp"
                                            android:fontFamily="@font/gothambook"
                                            />
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Activity Note"
                                        android:textColor="@color/black"                                        android:layout_gravity="center"
                                        android:textSize="12dp"
                                        android:padding="5dp"
                                        android:fontFamily="@font/gothambook"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_gravity="end">
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/activity_note"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="activity"
                                            android:gravity="end"
                                            android:textColor="@color/black"                                            android:layout_gravity="center"
                                            android:textSize="12dp"
                                            android:padding="5dp"
                                            android:fontFamily="@font/gothambook"
                                            />
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <androidx.appcompat.widget.AppCompatTextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Activity At"
                                        android:textColor="@color/black"                                        android:layout_gravity="center"
                                        android:textSize="12dp"
                                        android:padding="5dp"
                                        android:fontFamily="@font/gothambook"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_gravity="end">
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/activity_at"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="activityat"
                                            android:gravity="end"
                                            android:textColor="@color/black"                                            android:layout_gravity="center"
                                            android:textSize="12dp"
                                            android:padding="5dp"
                                            android:fontFamily="@font/gothambook"
                                            />
                                    </LinearLayout>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <androidx.appcompat.widget.AppCompatTextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Attachment"
                                        android:textColor="@color/black"                                        android:layout_gravity="left"
                                        android:textSize="12dp"
                                        android:padding="5dp"
                                        android:fontFamily="@font/gothambook"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="end"
                                        android:id="@+id/attachment_layout"
                                        >
                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/activity"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_gravity="center"
                                            android:background="@drawable/attachment_file"
                                            android:padding="5dp"
                                            android:gravity="end"
                                            />
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/attachment"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="attachment"
                                            android:textColor="@color/black"                                            android:layout_gravity="center"
                                            android:textSize="12dp"
                                            android:padding="5dp"
                                            android:visibility="gone"
                                            android:autoLink="web"
                                            />
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:weightSum="3"
                                    android:layout_marginBottom="@dimen/_5sdp">
                                    <androidx.appcompat.widget.AppCompatButton
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_weight="1"
                                        android:text="Re-open"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:textSize="@dimen/_9sdp"
                                        android:id="@+id/btn_reopen"
                                        android:background="@drawable/rounded_button"
                                        android:textColor="@color/white_color"
                                        android:visibility="gone"/>
                                    <androidx.appcompat.widget.AppCompatButton
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_weight="1"
                                        android:text="Approve"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:textSize="@dimen/_9sdp"
                                        android:id="@+id/btn_approve"
                                        android:background="@drawable/rounded_button"
                                        android:textColor="@color/white_color"
                                        android:visibility="gone"/>
                                </LinearLayout>
                            </LinearLayout>
                            </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
    </FrameLayout>

</LinearLayout>

